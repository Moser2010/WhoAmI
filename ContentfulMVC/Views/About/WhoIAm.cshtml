@model ContentfulMVC.Models.ViewModels.WhoIAm
<div id="wiaHeader" style="background:url('@Model.Pages.FeaturedImage.File.Url');background-size:cover;background-attachment:fixed;">
    <h1 id="wiaTitle">@Model.Pages.PageTitle</h1>
</div>
@Html.Partial("Wrapper")
<div id="wiaContainer" style="background:linear-gradient(rgba(0,0,0, 0.6),rgba(0,0,0,0.6)),url('https://i.pinimg.com/originals/40/a2/c3/40a2c3a05f6b6d9a5154ca231aff5bde.jpg');;background-size:cover;background-attachment:fixed;">
    <div  class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 resetPadding" style="padding-right:0;">
            <img class="hImage" src="@Model.Pages.Image1.File.Url" />
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 resetPadding" style="padding-left:0;">
            <div class="wWraper">
                <h1 class="wiaSubTitle">About Me</h1>
            </div>
            <p class="contentfulContent">@Model.Author.Bio</p>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 resetPadding" style="padding-right:0;">
            <div class="wWraper">
                <h1 class="wiaSubTitle">History</h1>
            </div>
            <p class="contentfulContent">@Model.Author.Backstory</p>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 resetPadding" style="padding-left:0;">
            <img class="hImage" src="@Model.Pages.Image2.File.Url" />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 resetPadding" style="padding-right:0;">
            <img class="hImage" src="@Model.Pages.Image3.File.Url" />
            <contentful-image asset-id="5na3PJ1om4eyAQcmia0S8y" />


        </div>
        <div id="wiaHobbies" class="col-lg-6 col-md-6 col-sm-12 col-xs-12 resetPadding" style="padding-left:0;">
            <div class="wWraper">
                <h1 class="wiaSubTitle">Things I Enjoy Doing</h1>
            </div>
            @foreach (string hobbie in Model.Author.Hobbies)
            {
                int i = 0;
                if (i <= Model.Author.Hobbies.Count / 2)
                {
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <ul>
                            <li>@hobbie</li>
                        </ul>
                    </div>
                    i++;
                }
                else
                {
                    <div class="col-lg-6 col-md-6 col-sm-12">
                        <ul>
                            <li>@hobbie</li>
                        </ul>
                    </div>

                }


            }
        </div>
    </div>
</div>