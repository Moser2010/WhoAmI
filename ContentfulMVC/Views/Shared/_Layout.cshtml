
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Who Am I</title>

    <environment include="Production">
        <link rel="stylesheet" href="~/dist/css/main.css" asp-append-version="true" />
    </environment>
</head>
<body>

    @await Component.InvokeAsync("Nav")
    @if (ViewContext.RouteData.Values["controller"].ToString() != "Home")
    {
        @await Html.PartialAsync("../Shared/_featuredBar.cshtml")
    }
    @RenderBody()
    @await Component.InvokeAsync("Footer")
    <environment include="Development">
        <script src="~/js/main.js" asp-append-version="true"></script>
    </environment>
    <environment include="Production">
        <script src="~/dist/js/main.js" asp-append-version="true"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
